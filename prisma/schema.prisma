generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Collection{
  id            Int @id @default(autoincrement())
  mal_id        Int
  user_email    String
  images        String?
  anime_title   String?

  @@unique([user_email, mal_id])
}

model Comment{
  id              Int @id @default(autoincrement())
  mal_id          Int
  user_email      String
  user_name       String
  comment         String
  title           String
  
}